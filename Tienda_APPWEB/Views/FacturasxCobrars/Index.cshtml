@model IEnumerable<Tienda_APPWEB.Models.FacturasxCobrar>

@{
    ViewData["Title"] = "Index";
    var estado = "x";
    var cancelada = "x";
}

@* <h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                Cliente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                Factura
            </th>
            <th>
                Estado
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                    @if (item.Cancelada)
                    {
                        cancelada = "Pendiente de pagar";
                    }
                    else
                    {
                       cancelada = "Pagada"; 
                    }
                    @cancelada
                </td>
            <td>
                    @if (item.Activo)
                    {
                        estado = "Activa";
                    }
                    else
                    {
                        estado = "Inactiva";
                    }
                    @estado
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idFacturasxCobrar">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idFacturasxCobrar">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.idFacturasxCobrar">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
